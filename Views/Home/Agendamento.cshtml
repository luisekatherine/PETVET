@model PreAgendamento;
@{
    ViewData["Title"] = "Pré Agendamento";
}

<body style="background-color: lightyellow; text-align: right;">
<table>
    <tr>
        <td>
            <img src="~/img/agendar.jpg" width="400">
        </td>
<form method="post">
    <td>
