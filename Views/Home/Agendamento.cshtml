<br>
<label asp-for="data">▫️</label>
<input asp-for="data" placeholder="Escolha a data e hora" required>
<br>
<label asp-for="animal">▫️</label>
<input asp-for="animal" placeholder="Dgite o animal:" required>
<br>
<label asp-for="necessidade">▫️</label>
<input asp-for="necessidade" placeholder="Digite a necessidade:" required>
<br>
<input type="submit" value="Agendar">
</form>
    </td>
    </tr>
</table>
</body>